<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- 2. supplier 创建 bean	-->
	<!--<bean id="user" class="com.ling.test14.supplier.User"></bean>-->
	<!--<bean class="com.ling.test14.supplier.SupplierBeanFactoryPostProcessor"></bean>-->



	<!-- 3. 静态工厂 -->
	<bean id="person01" class="com.ling.test14.factoryMethod.PersonStaticFactory" factory-method="getPerson">
		<!-- 可以我方法指定参数		 -->
		<constructor-arg value="zhangsan"></constructor-arg>
	</bean>


	<!--
	 3. 实例工厂创建 bean
	 factory-bean：指定使用哪个工厂实例
	 factory-method：指定使用哪个工厂实例的方法
	 -->
	<bean id="person02" class="com.ling.test14.factoryMethod.Person" factory-bean="personInstanceFactory" factory-method="getPerson">
		<constructor-arg value="wangwu"></constructor-arg>
	</bean>
	<bean id="personInstanceFactory" class="com.ling.test14.factoryMethod.PersonInstanceFactory"></bean>


</beans>